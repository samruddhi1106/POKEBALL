}

.social-icons a:hover {
  color: #00ffd5;
}

button {
  padding: 10px 20px;
  border: none;
  border-radius: 25px;
  background: #00ffd5;
  color: #000;
  font-weight: bold;
  cursor: pointer;
  transition: background 0.3s;
}

button:hover {
  background: #fff;
}
